#include "servo.h"

void Servo_init(uint32_t prescale, uint32_t period)
{
	servo_prescale = prescale;
	servo_period   = period;
}

void Servo_enable()
{
    PWM_enable(&g_pwm, SERVO_PWM);
}

void Servo_disable()
{
    PWM_disable(&g_pwm, SERVO_PWM);
}

/* setup servo's angle
 * angle: can be from -90 to 90
 */
uint8_t Servo_set_angle(int8_t angle)
{
	if (angle < -90 || 90 < angle)
		return 1;
	PWM_set_duty_cycle(&g_pwm, SERVO_PWM, )
}
